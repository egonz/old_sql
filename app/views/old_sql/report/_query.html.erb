<script>
$(document).ready(function($){
	$('#run-query').bind('click', function() {
      	query();
    });

	$('#delete-saved-queries').bind('click', function() {
      	deleted_saved_queries();
    });

	$('#saved-queries-list').bind('click', function() {
		$('#query-text').val($("#saved-queries-list option:selected").val()); 
    });
});
</script>

<div class="query">
	<div>
		DATABASE: 
		<select name="query-db" id="query-db" onchange="db_selected()">
		<% db_list.each do |db| %>
			<option value="<%=db[:name]%>" class_name="<%=db[:class_name]%>"><%=db[:name]%></option>
		<% end %>
		</select>
	</div>

	<div>
		<textarea id="query-text"></textarea>
	</div>

	<div>
		<span class="query-button">
			<input id="run-query" type="submit" value="Run" onclick="return true;" /> or press ctrl-enter
		</span>
		
		<span class="query-button">
			<input id="print-query" type="submit" value="Print" onclick="return true;" />
		</span>
		
		<span class="query-button">
			<input id="export-query-as-csv" type="submit" value="Export to CSV" onclick="return true;" />
		</span>
	</div>
</div>                        

<div id="saved_queries">
	<div>
		SAVED QUERIES:
	</div>
	
	<div>
		<select id="saved-queries-list" size="14">
		</select>
	</div>
	
	<div>
		<input id="delete-saved-queries" type="submit" value="Clear" onclick="return true;" />
	</div>
</div>